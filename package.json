{
  "name": "ra-react-template-2",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Rokas Anisas",
    "email": "rokas.anisas@gmail.com"
  },
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "start": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:files": "npx @ls-lint/ls-lint",
    "lint:ts": "eslint \"src/**/*.{js,jsx,json,ts,tsx}\" && yarn tsc --noEmit --skipLibCheck",
    "lint": "yarn lint:ts && yarn lint:files",
    "lint:fix": "prettier --write \"src/**/*.{js,jsx,json,md,mdx,ts,tsx}\" && eslint --fix \"src/**/*.{js,jsx,json,ts,tsx}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test",
    "generate": "motem templates"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.11.0",
    "@playwright/test": "^1.21.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.0.1",
    "@testing-library/user-event": "^14.1.0",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@vitejs/plugin-react": "^1.3.1",
    "c8": "^7.11.0",
    "eslint": "^8.13.0",
    "eslint-config-ra-react": "^1.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jsdom": "^19.0.0",
    "motem": "^1.0.4",
    "prettier": "^2.6.2",
    "sass": "^1.50.0",
    "typescript": "^4.6.3",
    "vite": "^2.9.5",
    "vitest": "^0.9.3"
  }
}
