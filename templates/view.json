{
  "name": "View",
  "description": "Generate a view stateful component",
  "add": [
    {
      "dirPath": "src/views/[ModuleName]",
      "files": [
        {
          "fileName": "[ModuleName].view.tsx",
          "template": [
            "import React, { VFC } from 'react';",
            "",
            "export const [ModuleName]: VFC = () => {",
            "  return <div id=\"[module-name]-view\">[ModuleName]</div>;",
            "};",
            ""
          ]
        },
        {
          "fileName": "index.ts",
          "template": ["export * from './[ModuleName].view';", ""]
        }
      ]
    }
  ],
  "modify": [
    {
      "filePath": "src/router/routes.ts",
      "lines": [
        {
          "hook": "// APPEND_ROUTE",
          "appendLines": ["  [moduleName]: { path: '/[module-name]', breadcrumb: '[ModuleName]' }'"]
        }
      ]
    },
    {
      "filePath": "src/router/Router.tsx",
      "lines": [
        {
          "hook": "// IMPORT_ROUTE",
          "appendLines": [
            "import { [ModuleName] } from '@/views/[ModuleName]';"
          ]
        },
        {
          "hook": "{/* APPEND_ROUTE */}",
          "appendLines": [
            "      <Route path={routes.[moduleName]} element={<[ModuleName] />} />"
          ]
        }
      ]
    }
  ]
}
