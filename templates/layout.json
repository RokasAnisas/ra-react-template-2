{
  "name": "Layout",
  "description": "Generate a layout component",
  "add": [
    {
      "dirPath": "src/layouts/[ModuleName]Layout",
      "files": [
        {
          "fileName": "[ModuleName]Layout.tsx",
          "template": [
            "import React, { FC } from 'react';",
            "import classNames from 'classnames/bind';",
            "",
            "import { [ModuleName]LayoutProps } from './[ModuleName]Layout.props';",
            "",
            "import styles from './[ModuleName]Layout.module.scss';",
            "const cx = classNames.bind(styles);",
            "",
            "export const [ModuleName]Layout: FC<[ModuleName]LayoutProps> = ({ children }) => {",
            "  const className = '[module-name]-layout';",
            "",
            "  return <div className={cx(className)}>{children}</div>;",
            "};",
            ""
          ]
        },
        {
          "fileName": "[ModuleName]Layout.story.tsx",
          "template": [
            "import React from 'react';",
            "import { Story, Meta } from '@storybook/react/types-6-0';",
            "",
            "import { [ModuleName]Layout } from './[ModuleName]Layout';",
            "import { [ModuleName]LayoutProps } from './[ModuleName]Layout.props';",
            "",
            "export default {",
            "  title: 'Layouts/[ModuleName]Layout',",
            "  component: [ModuleName]Layout,",
            "} as Meta;",
            "",
            "const Template: Story<[ModuleName]LayoutProps> = args => <[ModuleName]Layout {...args} />;",
            "",
            "export const Default = Template.bind({});",
            "Default.args = {",
            "  children: '[ModuleName]',",
            "} as [ModuleName]LayoutProps;",
            ""
          ]
        },
        {
          "fileName": "[ModuleName]Layout.props.ts",
          "template": ["export interface [ModuleName]LayoutProps {}", ""]
        },
        {
          "fileName": "[ModuleName]Layout.spec.tsx",
          "template": [
            "import React from 'react';",
            "import { render, screen } from '@testing-library/react';",
            "",
            "import { [ModuleName]Layout } from './[ModuleName]Layout';",
            "",
            "describe('[ModuleName]', () => {",
            "  it('Should render label', () => {",
            "    render(",
            "      <[ModuleName]Layout>",
            "        <div data-testid=\"test\">TEST</div>",
            "      </[ModuleName]Layout>",
            "    );",
            "",
            "    expect(screen.getByTestId('test')).toBeTruthy();",
            "  });",
            "});",
            ""
          ]
        },
        {
          "fileName": "[ModuleName]Layout.module.scss",
          "template": [
            "@use 'src/styles/resources' as theme;",
            "",
            ".[module-name]-layout {",
            "  display: flex;",
            "}",
            ""
          ]
        },
        {
          "fileName": "index.ts",
          "template": [
            "export { [ModuleName]Layout } from './[ModuleName]Layout';",
            ""
          ]
        }
      ]
    }
  ]
}
